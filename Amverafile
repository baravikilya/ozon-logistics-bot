# Amvera deployment configuration for Ozon Logistics Bot

# Application name (will be set during deployment)
name: ozon-logistics-bot

# Python version
python: "3.10"

# Main application file
main: main.py

# Working directory
workdir: /app

# Build commands
build:
  - pip install -r requirements.txt

# Start command
run: uvicorn main:app --host 0.0.0.0 --port $PORT --workers 1

# Environment variables (examples - actual values set in Amvera dashboard)
env:
  - TELEGRAM_BOT_TOKEN=your_bot_token_here
  - DATABASE_URL=postgresql+asyncpg://user:password@host:port/database
  - DEBUG=false
  - LOG_LEVEL=INFO

# Health check
healthcheck:
  path: /
  interval: 30s
  timeout: 10s

# Resources
resources:
  memory: 512MB
  cpu: 0.5

# Domains (will be configured in Amvera)
# domains:
#   - your-domain.amvera.io